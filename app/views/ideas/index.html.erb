<h1>Listing ideas</h1>

<% @ideas.in_groups_of(3) do |group| %>   <!--每三個一組-->
  <div class="row">
    <% group.compact.each do |idea| %>
      <div class="span4">
        <%= image_tag idea.picture_url, :width => '30%' if idea.picture.present?%>  <!--圖-->
        <h4><%= link_to idea.name, idea %></h4> <!--名字-->
        <%= idea.description %> <!--描述-->
        <%= link_to 'Edit', edit_idea_path(idea) %>
        <%= link_to 'Destroy', idea, method: :delete, data: { confirm: 'Are you sure?' } %>
       </div>
    <% end %>
  </div>
<% end %>

